---
// Modern About section with enhanced visuals and animations
import { t } from '@/i18n/utils';
import type { Language } from '@/types';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
---

<section class="relative py-24 bg-gradient-to-br from-white via-blue-50 to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 overflow-hidden" id="about">
  <!-- Background Elements -->
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute top-20 right-10 w-96 h-96 bg-blue-200 dark:bg-blue-900 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-3xl opacity-20 animate-float"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 bg-purple-200 dark:bg-purple-900 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-3xl opacity-20 animate-float-delayed"></div>
  </div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <section class="text-center max-w-4xl mx-auto mb-20">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-sm font-medium mb-6">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        {t(lang, 'about.subtitle')}
      </div>
      
      <h2 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-purple-900 dark:from-white dark:via-blue-100 dark:to-purple-100 bg-clip-text text-transparent mb-6 leading-tight">
        {t(lang, 'about.title')}
      </h2>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto mb-4">
        {t(lang, 'about.subtitle')}
      </p>
      
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
        </svg>
        {t(lang, 'about.established')}
      </div>
    </section>

    <!-- Main Content Grid -->
    <main class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-24">
      
      <!-- Left Column - Company Story -->
      <article class="space-y-8">
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-8 text-lg">
            {t(lang, 'about.description')}
          </p>

          <blockquote class="relative border-l-4 border-gradient-to-b from-blue-500 to-purple-600 pl-8 py-6 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-r-2xl shadow-lg">
            <div class="absolute top-4 left-4 w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center" aria-hidden="true">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
            <p class="text-gray-800 dark:text-gray-200 font-medium italic text-xl leading-relaxed pl-6">
              "{t(lang, 'about.quote')}"
            </p>
          </blockquote>

          <p class="text-gray-700 dark:text-gray-300 leading-relaxed mt-8 text-lg">
            {t(lang, 'about.achievement')}
          </p>
        </div>
      </article>

      <!-- Right Column - Company Visual -->
      <aside class="relative">
        <div class="relative bg-gradient-to-br from-blue-500 via-purple-600 to-indigo-700 rounded-3xl h-96 flex items-center justify-center overflow-hidden shadow-2xl">
          <!-- Background Pattern -->
          <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.1&quot;%3E%3Ccircle cx=&quot;30&quot; cy=&quot;30&quot; r=&quot;2&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>
          </div>
          
          <!-- Company Logo/Icon -->
          <div class="relative z-10 text-center">
            <div class="w-32 h-32 bg-white/20 backdrop-blur-md rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-xl">
              <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-white mb-2">
              {lang === 'en' ? 'VINC Placement Headquarters' : lang === 'ja' ? 'VINCプレースメント本社' : 'สำนักงานใหญ่ VINC Placement'}
            </h3>
            
            <p class="text-blue-200 text-lg font-medium">
              {lang === 'en' ? 'Bangkok, Thailand - Gateway to Japanese Opportunities' : lang === 'ja' ? 'バンコク、タイ - 日本への機会の玄関口' : 'กรุงเทพฯ ประเทศไทย - ประตูสู่โอกาสในญี่ปุ่น'}
            </p>
          </div>
        </div>

        <!-- Floating Stats Cards -->
        <figure class="absolute -bottom-8 -left-8 bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-2xl border border-gray-100 dark:border-gray-700 animate-float">
          <div class="text-center">
            <div class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">35+</div>
            <figcaption class="text-sm text-gray-600 dark:text-gray-400 font-medium">
              {lang === 'en' ? 'Years Experience' : lang === 'ja' ? '年の経験' : 'ปีประสบการณ์'}
            </figcaption>
          </div>
        </figure>
        
        <figure class="absolute -top-8 -right-8 bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-2xl border border-gray-100 dark:border-gray-700 animate-float-delayed">
          <div class="text-center">
            <div class="text-3xl font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">10K+</div>
            <figcaption class="text-sm text-gray-600 dark:text-gray-400 font-medium">
              {lang === 'en' ? 'Workers Placed' : lang === 'ja' ? '派遣労働者' : 'แรงงานที่ส่งไป'}
            </figcaption>
          </div>
        </figure>
      </aside>
    </main>

    <!-- Expertise Areas -->
    <section class="mb-24">
      <header class="text-center mb-16">
        <h3 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-purple-900 dark:from-white dark:via-blue-100 dark:to-purple-100 bg-clip-text text-transparent mb-6">
          {t(lang, 'about.expertise_title')}
        </h3>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto leading-relaxed">
          {t(lang, 'about.expertise_description')}
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {(t(lang, 'about.expertise_areas') as string[] || []).map((area: string, index: number) => (
          <article class="group relative bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-white/20 dark:border-gray-700/50">
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-purple-500/5 to-pink-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" aria-hidden="true"></div>
            
            <div class="relative">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300" aria-hidden="true">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <p class="text-gray-700 dark:text-gray-300 font-medium text-lg leading-relaxed group-hover:text-gray-900 dark:group-hover:text-white transition-colors duration-300">{area}</p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="relative bg-gradient-to-r from-gray-50 via-blue-50 to-purple-50 dark:from-gray-800 dark:via-gray-700 dark:to-gray-800 rounded-3xl p-8 md:p-16 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5" aria-hidden="true">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;40&quot; height=&quot;40&quot; viewBox=&quot;0 0 40 40&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;%233b82f6&quot; fill-opacity=&quot;0.1&quot;%3E%3Cpath d=&quot;M20 20c0-11.046-8.954-20-20-20v20h20z&quot;/%3E%3C/g%3E%3C/svg%3E')"></div>
      </div>
      
      <div class="relative">
        <header class="text-center mb-16">
          <h3 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-purple-900 dark:from-white dark:via-blue-100 dark:to-purple-100 bg-clip-text text-transparent mb-6">
            {t(lang, 'about.why_choose_title')}
          </h3>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {(t(lang, 'about.why_choose_items') as any[] || []).map((item: any, index: number) => (
            <article class="group relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 dark:border-gray-700">
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-purple-500/5 to-pink-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" aria-hidden="true"></div>
              
              <div class="relative">
                <div class="flex items-start space-x-6">
                  <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300 shadow-lg" aria-hidden="true">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      {index === 0 ? (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      ) : index === 1 ? (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                      ) : index === 2 ? (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                      ) : (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      )}
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-2xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                      {item.title}
                    </h4>
                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-lg">
                      {item.description}
                    </p>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</section>

<style>
  /* Modern animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  @keyframes floatDelayed {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: floatDelayed 8s ease-in-out infinite;
  }
  
  /* Gradient text */
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  /* Glass morphism */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }
  
  .backdrop-blur-md {
    backdrop-filter: blur(12px);
  }
</style>
