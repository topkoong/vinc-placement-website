<!-- 
  Hero slideshow functionality
  Provides interactive slideshow with accessibility features
  Includes automatic rotation and manual controls
-->
<script>
  /**
   * Hero slideshow functionality
   * Handles image carousel with proper accessibility
   * Includes automatic rotation and manual navigation
   */
  
  // Wait for DOM to be fully loaded before initializing
  document.addEventListener('DOMContentLoaded', function () {
    // 
    // Get references to slideshow elements
    // Uses defensive programming to check for element existence
    // 
    const slideshow = document.getElementById('hero-slideshow');
    const slides = slideshow?.querySelectorAll('[data-slide]');
    const dots = document.querySelectorAll('[data-slide-btn]');
    const prevBtn = document.getElementById('prev-slide');
    const nextBtn = document.getElementById('next-slide');

    // 
    // Early return if required elements don't exist
    // Prevents errors and ensures graceful degradation
    // 
    if (!slides || !dots || !prevBtn || !nextBtn) return;

    // 
    // Slideshow state management
    // Tracks current slide and total number of slides
    // 
    let currentSlide = 0;
    const totalSlides = slides.length;

    /**
     * Show specific slide with smooth transition
     * Updates visual state and ARIA attributes for accessibility
     * @param {number} index - Index of slide to show
     */
    function showSlide(index: number) {
      // 
      // Hide all slides
      // Removes active classes from all slides
      // 
      slides.forEach((slide) => {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0');
      });

      // 
      // Show target slide
      // Adds active classes to target slide
      // 
      slides[index].classList.remove('opacity-0');
      slides[index].classList.add('opacity-100');

      // 
      // Update dot indicators
      // Updates visual state of navigation dots
      // 
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.remove('bg-white/50');
          dot.classList.add('bg-white');
          // Update ARIA attributes for accessibility
          dot.setAttribute('aria-selected', 'true');
        } else {
          dot.classList.remove('bg-white');
          dot.classList.add('bg-white/50');
          // Update ARIA attributes for accessibility
          dot.setAttribute('aria-selected', 'false');
        }
      });
    }

    /**
     * Navigate to next slide
     * Handles wraparound to first slide after last slide
     */
    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    }

    /**
     * Navigate to previous slide
     * Handles wraparound to last slide before first slide
     */
    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(currentSlide);
    }

    // 
    // Event listeners for manual navigation
    // Provides user control over slideshow
    // 
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    // 
    // Event listeners for dot navigation
    // Allows direct navigation to specific slides
    // 
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        showSlide(currentSlide);
      });
    });

    // 
    // Automatic slideshow rotation
    // Advances slides every 5 seconds for continuous engagement
    // 
    setInterval(nextSlide, 5000);

    // 
    // Scroll indicator functionality
    // Shows/hides scroll indicator based on scroll position
    // 
    const scrollIndicator = document.getElementById('scroll-indicator');
    if (scrollIndicator) {
      /**
       * Handle scroll events
       * Updates scroll indicator visibility based on scroll position
       * Uses passive event listener for better performance
       */
      const onScroll = () => {
        if (window.scrollY > 80) {
          // Hide indicator when scrolled down
          scrollIndicator.style.opacity = '0';
        } else {
          // Show indicator when near top
          scrollIndicator.style.opacity = '1';
        }
      };
      
      // 
      // Add scroll event listener
      // Uses passive option for better performance
      // 
      window.addEventListener('scroll', onScroll, { passive: true });
      
      // 
      // Initial check for scroll position
      // Ensures correct initial state
      // 
      onScroll();
    }
  });
</script>

