---
// Footer component with contact info, links, and newsletter signup
import Logo from '@/components/common/Logo.astro';
import { getLangFromUrl, t } from '@/i18n/utils';
import { CONTACT_INFO, SITE_CONFIG, ROUTES } from '@/utils/constants';

// Component props interface
interface Props {
  class?: string;
}

// Destructure props
const { class: className = '' } = Astro.props;

// Get current language from URL
const lang = getLangFromUrl(Astro.url);

// Quick links for footer
const quickLinks = [
  { key: 'home', href: `/${lang}` },
  { key: 'about', href: `/${lang}/about` },
  { key: 'services', href: `/${lang}/services` },
  { key: 'projects', href: `/${lang}/projects` },
  { key: 'contact', href: `/${lang}/contact` },
];

// Service links
const serviceLinks = [
  { key: 'workforce', href: `/${lang}/services#workforce` },
  { key: 'engineering', href: `/${lang}/services#engineering` },
  { key: 'training', href: `/${lang}/services#training` },
  { key: 'testing', href: `/${lang}/services#testing` },
];
---

<footer class={`bg-gray-900 dark:bg-black text-white ${className}`}>
  <!-- Main Footer Content -->
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12'>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8'>
      <!-- Company Info -->
      <section class='lg:col-span-1'>
        <header class='mb-6'>
          <Logo variant='full' size='lg' />
        </header>

        <p class='text-gray-300 text-sm leading-relaxed mb-6'>
          {t(lang, 'footer.about_text')}
        </p>

        <!-- Contact Info -->
        <address class='space-y-3 not-italic'>
          <div class='flex items-start space-x-3'>
            <svg
              class='w-5 h-5 text-primary-400 mt-0.5 flex-shrink-0'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
              aria-hidden='true'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'
              ></path>
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'></path>
            </svg>
            <div>
              <p class='text-gray-300 text-sm'>
                {CONTACT_INFO.address}
              </p>
            </div>
          </div>

          <div class='flex items-center space-x-3'>
            <svg
              class='w-5 h-5 text-primary-400 flex-shrink-0'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
              aria-hidden='true'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
              ></path>
            </svg>
            <div>
              {
                CONTACT_INFO.phone.map((phone, index) => (
                  <p class='text-gray-300 text-sm'>
                    <a
                      href={`tel:${phone}`}
                      class='hover:text-primary-400 transition-colors duration-200'
                    >
                      {phone}
                    </a>
                  </p>
                ))
              }
            </div>
          </div>

          <div class='flex items-center space-x-3'>
            <svg
              class='w-5 h-5 text-primary-400 flex-shrink-0'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
              aria-hidden='true'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
              ></path>
            </svg>
            <div>
              <a
                href={`mailto:${CONTACT_INFO.email}`}
                class='text-gray-300 text-sm hover:text-primary-400 transition-colors duration-200'
              >
                {CONTACT_INFO.email}
              </a>
            </div>
          </div>
        </address>
      </section>

      <!-- Quick Links -->
      <nav>
        <h3 class='text-lg font-semibold text-white mb-6'>
          {t(lang, 'footer.quick_links')}
        </h3>
        <ul class='space-y-3'>
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class='text-gray-300 text-sm hover:text-primary-400 transition-colors duration-200'
                >
                  {t(lang, `nav.${link.key}`)}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Services -->
      <nav>
        <h3 class='text-lg font-semibold text-white mb-6'>
          {t(lang, 'footer.services_title')}
        </h3>
        <ul class='space-y-3'>
          {
            serviceLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class='text-gray-300 text-sm hover:text-primary-400 transition-colors duration-200'
                >
                  {t(lang, `services.${link.key}.title`)}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Newsletter removed per request -->
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class='border-t border-gray-800'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6'>
      <div
        class='flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0'
      >
        <!-- Copyright -->
        <div class='text-gray-400 text-sm text-center md:text-left'>
          <p>
            {
              t(lang, 'footer.copyright').replace(
                '2025',
                SITE_CONFIG.currentYear.toString()
              )
            }
          </p>
          <p class='mt-1 text-xs'>{t(lang, 'footer.slogan')}</p>
        </div>

        <!-- Google Maps Link -->
        <div class='flex items-center space-x-2'>
          <svg
            class='w-4 h-4 text-gray-400'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
            aria-hidden='true'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'
            ></path>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'></path>
          </svg>
          <a
            href={CONTACT_INFO.googleMapsUrl}
            target='_blank'
            rel='noopener noreferrer'
            class='text-gray-400 hover:text-primary-400 text-sm transition-colors duration-200'
          >
            {t(lang, 'contact.view_map')}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
