---
// Services page for Thai
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Services from '@/components/sections/Services.astro';
import { getLangFromUrl, t } from '@/i18n/utils';
import { generateSEOMeta } from '@/utils/seo';

// Get current language from URL
const lang = getLangFromUrl(Astro.url);

// Generate SEO metadata
const seo = generateSEOMeta({
  title: t(lang, 'services.title'),
  description: t(lang, 'services.subtitle'),
  keywords: ['services', 'workforce', 'recruitment', 'placement', 'training'],
  canonical: `/th/services`,
  alternates: [
    { lang: 'en', href: '/en/services' },
    { lang: 'ja', href: '/ja/services' },
  ],
});
---

<BaseLayout seo={seo}>
  <Header slot='header' />

  <main>
    <Services lang={lang} />
  </main>

  <Footer slot='footer' />
</BaseLayout>
