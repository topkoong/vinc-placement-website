---
// Thai homepage
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/SiteHeader.astro';
import Footer from '@/components/layout/SiteFooter.astro';
import Hero from '@/components/sections/HeroSection.astro';
import About from '@/components/sections/AboutSection.astro';
import Services from '@/components/sections/ServicesSection.astro';
import Projects from '@/components/sections/ProjectsSection.astro';
import { generateSEOMeta } from '@/utils/seo';
import { t } from '@/i18n/utils';

// Get current language
const lang = 'th';

// Generate SEO metadata for Thai homepage
const seo = generateSEOMeta({
  title: t(lang, 'meta.title'),
  description: t(lang, 'meta.description'),
  keywords: t(lang, 'meta.keywords').split(', '),
  lang: lang,
  path: '/',
});
---

<BaseLayout seo={seo}>
  <Header slot='header' />

  <!-- Hero Section -->
  <Hero lang={lang} />

  <!-- About Section -->
  <About lang={lang} />

  <!-- Services Section -->
  <Services lang={lang} />

  <!-- Projects Section -->
  <Projects lang={lang} />

  <!-- Contact section will be added here -->

  <Footer slot='footer' />
</BaseLayout>
