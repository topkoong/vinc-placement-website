---
// Japanese homepage - Main landing page
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from '@/components/sections/Hero.astro';
import About from '@/components/sections/About.astro';
import Services from '@/components/sections/Services.astro';
import Projects from '@/components/sections/Projects.astro';
import { generateSEOMeta } from '@/utils/seo';
import { t } from '@/i18n/utils';

// Get current language
const lang = 'ja';

// Generate SEO metadata for Japanese homepage
const seo = generateSEOMeta({
  title: t(lang, 'meta.title'),
  description: t(lang, 'meta.description'),
  keywords: t(lang, 'meta.keywords').split(', '),
  lang: lang,
  path: '/',
});
---

<BaseLayout seo={seo}>
  <Header slot='header' />

  <!-- Hero Section -->
  <Hero lang={lang} />

  <!-- About Section -->
  <About lang={lang} />

  <!-- Services Section -->
  <Services lang={lang} />

  <!-- Projects Section -->
  <Projects lang={lang} />

  <!-- Contact section will be added here -->

  <Footer slot='footer' />
</BaseLayout>
